<%- include('header', {titulo: 'Gestion de Noticias'}); %>

<div class="container">
    <br>
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img height="400px" src="https://media.aweita.larepublica.pe/678x508/aweita/imagen/2018/02/08/noticia-10-memes-que-se-burlan-de-todo-lo-que-hacemos-en-semana-santa-portada.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img height="400px" src="https://cdn1.uvnimg.com/d4/36/b10407f5473883dcc65181d09f5b/promomemesbarcareal.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img height="400px" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSlSv2awpZOxviUf4vDQeIjbV5CKz1LxvyogYAaGFg3tAXAAfjY" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <br>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Launch demo modal
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <br>
    <button type="button"
            class="btn btn-lg btn-danger popover-contenido"
            data-toggle="popover"
            title="¿MM?"
            data-content="No sera de tomar un tragito"
            data-placement="bottom">
        Ejemplo popover</button>
    <br>
    <% const existeMensaje = typeof mensaje !== "undefined" %>

    <% if(existeMensaje){ %>
        <div class="<%=clase%>" role="alert" >
            <span class="font-weight-bold">
                MENSAJE
            </span> : <%= mensaje %>
        </div>

    <% } %>
    <!-- h1 -> header 1  -->
    <h1> <%= usuario %> </h1>
    <% var vicente = 'Vicente'; %>
    <!-- h2 -> header 2  -->
    <h2>  <%= vicente %>  </h2>
    <% if(booleano) { %>
        <!-- p -> parrafo  -->
        <p>Usted creo una noticia</p>
    <% } %>
    <h1>Gestion de noticias</h1>
    <p>Busque, cree, actualice y elimine noticias.
        Puede buscar noticias por el titulo o la descripcion</p>
    <!-- ul -> unordered list  -->
    <!-- ol -> ordered list  -->
    <!-- a -> anchor -->

    <form method="get" action="/noticia/inicio">
        <div class="row">
            <div class="col-sm-9">
                <div class="form-group">
                   <label for="busqueda">Busqueda</label>
                   <input id="busqueda" type="text" name="busqueda" class="form-control">
               </div>
            </div>
            <div class="col-sm-3">
                <button class="btn btn-outline-success btn-block espaciado-busqueda" >Buscar</button>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-sm-9">
        </div>
        <div class="col-sm-3">
            <a href="/noticia/crear-noticia" class="quitar-link">
                <button class="btn btn-outline-success btn-block " >Crear noticia</button>
            </a>
        </div>
    </div>
    <h2>Listado de Noticias</h2>
    <p>Listado de noticias, actualice o elimine noticias</p>
    <div class="scroll-tabla">
        <table class="table table-hover animated slideInLeft">
            <!-- tr -> table row -->
            <thead>
            <tr>
                <!-- th -> table header -->
                <th width="30%">Título</th>
                <th width="50%">Descripción</th>
                <th width="20%">Acciones</th>
            </tr>
            </thead>
            <tbody>
            <!-- tr -> table row -->
            <% arreglo.forEach( (noticia)=> { %>
                <tr>
                    <!-- td -> table detail -->
                    <td><%= noticia.titulo %></td>
                    <td><%= noticia.descripcion %></td>
                    <td>
                        <form action="/noticia/eliminar/<%= noticia.id %>" method="POST">
                            <!--<button type="button"> clickea sin problemas</button>
                            <button>Yo tambien envio informacion</button>
                            -->
                            <button class="btn btn-outline-danger btn-block estaciado-boton" type="submit"> Eliminar</button>
                        </form>
                        <a href="/noticia/actualizar-noticia/<%= noticia.id %>" class="quitar-link">
                            <button class="btn btn-outline-info btn-block estaciado-boton">Actualizar</button>
                        </a>


                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
</div>
<%- include('librerias'); %>
<script>
    $(function () {
        $('.popover-contenido').popover({
            container: 'body'
        })
    })
</script>
<%- include('footer'); %>



